1.1
import numpy as np
import imageio.v2 as iio
import matplotlib.pylab as plt

data = iio.imread('fruit.jpg')
bmg= data[800:1200, 570:980]
print(data.shape)

iio.imsave('orange.jpg', bmg)
plt.imshow(bmg)
plt.show()

1.2 
import numpy as np
import scipy.ndimage as nd
import matplotlib.pylab as plt
from PIL import Image
import imageio.v2 as iio


img = Image.open('fruit.jpg').convert('L')
data = np.array(img)
bdata = nd.shift(data, (100, 25))

plt.imshow(bdata)  
plt.show()

1.3
import numpy as np
import scipy.ndimage as nd
import matplotlib.pylab as plt
from PIL import Image
import imageio.v2 as iio


data = iio.imread('fruit.jpg')
print(data.shape)
bdata = nd.zoom(data,2)
print(bdata.shape)
data2 = nd.zoom (data,(2,2,1))
print(data2.shape)
data3 = nd.zoom(data,(0.5,0.9,1))
plt.imshow(data3)
plt.show()

1.4
import numpy as np
import scipy.ndimage as nd
import matplotlib.pylab as plt
from PIL import Image
import imageio.v2 as iio


data = iio.imread('fruit.jpg')
print(data.shape)
d1 = nd.rotate(data,20)
plt.imshow(d1)
plt.show()

d2 = nd.rotate(data,20,reshape=False)
plt.imshow(d2)
plt.show()

1.5
import numpy as np
import scipy.ndimage as nd
import matplotlib.pylab as plt
from PIL import Image
import imageio.v2 as iio


data = iio.imread('world_cup.jpg', mode='L')
print(data.shape)
d1 = nd.binary_dilation(data)
plt.imshow(d1)
plt.show()

d2 = nd.binary_dilation(data,interations=3)
plt.imshow(d2)
plt.show()

1.6
import numpy as np
import scipy.ndimage as nd
import matplotlib.pylab as plt
from PIL import Image
import imageio.v2 as iio


data = iio.imread('world_cup.jpg', mode='L')
print(data.shape)
V,H = data.shape
M = np.indices ((V, H))

d = 5
q = 2*d*np.random.ranf(M.s  hape) - d
mp = (M + q).astype(int)
d1 = nd.map_coordinates(data,mp)
plt.imshow(d1)
plt.show()

1.7
import numpy as np
import scipy.ndimage as nd
import matplotlib.pylab as plt
from PIL import Image
import imageio.v2 as iio

def GeoFun(outcoord):
    a = 10*np.cos(outcoord[0]/10.0) +outcoord[0]
    b = 10*np.sin(outcoord[1]/10.0) +outcoord[1]
    return a, b
data = iio.imread('world_cup.jpg', mode='L')
d1 = nd.geometric_transform(data,GeoFun)
plt.imshow(d1)
plt.show()

